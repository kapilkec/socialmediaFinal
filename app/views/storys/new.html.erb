<h1>Add your Story </h1>
<%= form_with model: @story ,url:new_story_path , class:"bg-light text-dark story_form" do |form| %>
  <div>
    <%= form.label :note , class:"form-label" %>
    <%= form.text_field :note , class:"form-control" %>
    <% @story.errors.full_messages_for(:note).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <br>
    <%= form.label :image , class:"form-label" %>
    <%= form.file_field :image, multiple:false,required:true, class:"form-control"%>
    <br>
    <%= form.submit "submit" , class:"btn btn-success w-100"%>
  </div>
<% end %>
